{
  "name": "@deskpro-apps/sellsy",
  "title": "Sellsy",
  "description": "",
  "version": "0.0.2",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "entityAssociations": {
    "linkedSellsyContact": {
      "entity": "person",
      "type": "external_id",
      "title": "Sellsy Contact"
    }
  },
  "settings": {
    "client_id": {
      "title": "Client id",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://login.sellsy.com/oauth2/.*",
        "methods": ["POST"],
        "timeout": 20
      },
      {
        "url": "https://api.sellsy.com/v2/.*",
        "methods": ["GET", "POST", "PUT"],
        "timeout": 20
      }
    ]
  }
}
